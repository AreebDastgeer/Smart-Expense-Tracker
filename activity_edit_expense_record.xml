<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditExpenseRecord">

    <EditText
        android:id="@+id/editdate"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="78dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/selectDate"
        android:inputType="date"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editcategory"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editdate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="73dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/enterCategory"
        android:inputType="text"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editamount"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editcategory"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="75dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/enterAmount"
        android:inputType="number"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="262dp"
        android:layout_height="69dp"
        android:layout_below="@+id/editamount"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="95dp"
        android:backgroundTint="#05AFC5"
        android:onClick="UpdateContact"
        android:text="@string/update"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btndelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnupdate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="236dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="213dp"
        android:backgroundTint="#0396A8"
        android:onClick="DeleteContact"
        android:text="@string/delete"
        android:textSize="16sp" />

</RelativeLayout>